<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MasterAdminActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:layout_height="150dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:elevation="4dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="12dp"
                            android:id="@+id/cvcurrentorders"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:tint="@android:color/holo_blue_dark"
                                    android:src="@drawable/current_order"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Current Orders"
                                    android:textSize="18dp"
                                    android:paddingHorizontal="10dp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/black"
                                    android:gravity="center"
                                    />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:elevation="4dp"
                            android:id="@+id/cvordersnotconfirmedbyrestaurant"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="12dp"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:tint="@android:color/holo_blue_dark"
                                    android:src="@drawable/ic_error_black_24dp"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Orders Not Confirmed By Restaurant"
                                    android:textSize="14dp"
                                    android:paddingHorizontal="10dp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/black"
                                    android:gravity="center"
                                    />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:layout_height="150dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:elevation="4dp"
                            android:layout_margin="10dp"
                            android:id="@+id/cvadvanceorders"
                            app:cardCornerRadius="12dp"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:tint="@android:color/holo_blue_dark"
                                    android:src="@drawable/ic_alarm_black_24dp"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Advance Orders"
                                    android:textSize="18dp"
                                    android:paddingHorizontal="10dp"                                    android:textStyle="bold"
                                    android:textColor="@android:color/black"
                                    android:gravity="center"
                                    />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:elevation="4dp"
                            android:id="@+id/cvordersassigned"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="12dp"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:tint="@android:color/holo_blue_dark"
                                    android:src="@drawable/ic_assignment_turned_in_black_24dp"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Orders Assigned"
                                    android:textSize="18dp"
                                    android:paddingHorizontal="10dp"                                    android:textStyle="bold"
                                    android:textColor="@android:color/black"
                                    android:gravity="center"
                                    />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:layout_height="150dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:elevation="4dp"
